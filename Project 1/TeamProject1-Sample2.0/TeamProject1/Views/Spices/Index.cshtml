            <td>
                @Html.DisplayFor(modelItem => item.Seasoning.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seasoning.Calories)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seasoning.Place_of_Origin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hotness)
